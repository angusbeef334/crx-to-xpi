{
  "manifest_version": 2,
  "name": "crx-to-xpi",
  "version": "1.0",

  "description": "Chrome extensions for Firefox",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://chromewebstore.google.com/*"],
      "js": ["crx-to-xpi.js"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "crx-to-xpi@angusbeef334.github.io"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/message.svg"
  },

  "permissions": ["nativeMessaging"]
}