{
  "manifest_version": 3,
  "name": "crx-to-xpi",
  "version": "1.0",

  "description": "Chrome extensions for Firefox",

  "icons": {
    "32": "icons/fox-32.png",
    "64": "icons/fox-64.png"
  },

  "content_scripts": [
    {
      "matches": ["*://chromewebstore.google.com/*"],
      "js": ["crx-to-xpi.js"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "crx-to-xpi@angusbeef334.github.io"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "action": {
    "default_icon": "icons/fox-32.png",
    "default_title": "crx-to-xpi"
  },

  "permissions": ["nativeMessaging"]
}